# Environment
NODE_ENV=development

# Server
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/webhook-relay
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/webhook-relay?retryWrites=true&w=majority

# Redis
REDIS_URL=redis://localhost:6379
# For Redis Cloud (production):
# REDIS_URL=redis://default:password@redis-host:port

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# API Keys
API_KEY_SECRET=your-super-secret-api-key-salt-change-this

# Webhook Signing
WEBHOOK_SIGNING_SECRET=your-webhook-hmac-secret-change-this

# Paystack (Ghana)
PAYSTACK_SECRET_KEY=sk_test_your_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret

# SendGrid Email
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@richytech.inc
SENDGRID_FROM_NAME=Richytech Webhook Relay

# URLs
CLIENT_URL=http://localhost:5173
API_URL=http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook Processing
WEBHOOK_TIMEOUT_MS=30000
WEBHOOK_MAX_RETRIES=6
WEBHOOK_WORKER_CONCURRENCY=10

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
